{% block extra_js %}
<script>
// JavaScript –¥–ª—è —Å—Ç—Ä–∞–Ω–∏—Ü—ã –∑–∞–≥—Ä—É–∑–∫–∏ –≤–∏–¥–µ–æ
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('uploadForm');
    const dropZone = document.getElementById('dropZone');
    const fileInput = document.getElementById('videoFile');
    const fileInfo = document.getElementById('fileInfo');
    const fileName = document.getElementById('fileName');
    const fileMeta = document.getElementById('fileMeta');
    const submitBtn = document.getElementById('submitBtn');
    const progressSection = document.getElementById('progressSection');
    const progressBar = document.getElementById('progressBar');
    const progressPercent = document.getElementById('progressPercent');
    const progressSteps = document.getElementById('progressSteps');

    // Drag & Drop
    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
        dropZone.addEventListener(eventName, preventDefaults, false);
    });

    function preventDefaults(e) {
        e.preventDefault();
        e.stopPropagation();
    }

    ['dragenter', 'dragover'].forEach(eventName => {
        dropZone.addEventListener(eventName, highlight, false);
    });

    ['dragleave', 'drop'].forEach(eventName => {
        dropZone.addEventListener(eventName, unhighlight, false);
    });

    function highlight() {
        dropZone.style.borderColor = 'var(--accent)';
        dropZone.style.background = 'var(--bg-card)';
    }

    function unhighlight() {
        dropZone.style.borderColor = 'var(--border)';
        dropZone.style.background = 'var(--bg-hover)';
    }

    dropZone.addEventListener('drop', handleDrop, false);

    function handleDrop(e) {
        const dt = e.dataTransfer;
        const files = dt.files;
        fileInput.files = files;
        handleFiles(files);
    }

    fileInput.addEventListener('change', function(e) {
        handleFiles(this.files);
    });

    function handleFiles(files) {
        if (files.length > 0) {
            const file = files[0];
            const fileSize = (file.size / (1024 * 1024)).toFixed(2);

            fileName.textContent = file.name;
            fileMeta.textContent = `${fileSize} MB`;
            fileInfo.style.display = 'block';
        }
    }

    // –§—É–Ω–∫—Ü–∏–∏ –¥–ª—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –ø—Ä–æ–≥—Ä–µ—Å—Å–∞
    function updateProgress(stepNumber, percent, text) {
        // –û–±–Ω–æ–≤–ª—è–µ–º —à–∞–≥
        const stepElement = document.getElementById(`step${stepNumber}`);
        if (stepElement) {
            // –°–±—Ä–∞—Å—ã–≤–∞–µ–º –≤—Å–µ —à–∞–≥–∏
            document.querySelectorAll('.step').forEach(step => {
                step.classList.remove('active');
            });
            
            // –ê–∫—Ç–∏–≤–∏—Ä—É–µ–º —Ç–µ–∫—É—â–∏–π —à–∞–≥
            stepElement.classList.add('active');
            stepElement.querySelector('.step-text').textContent = text;
        }
        
        // –û–±–Ω–æ–≤–ª—è–µ–º –ø—Ä–æ–≥—Ä–µ—Å—Å –±–∞—Ä
        progressBar.style.width = percent + '%';
        progressPercent.textContent = percent + '%';
    }

    function resetProgress() {
        progressBar.style.width = '0%';
        progressPercent.textContent = '0%';
        
        // –°–±—Ä–∞—Å—ã–≤–∞–µ–º –≤—Å–µ —à–∞–≥–∏
        document.querySelectorAll('.step').forEach(step => {
            step.classList.remove('active');
        });
        
        // –í–æ—Å—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∏—Å—Ö–æ–¥–Ω—ã–π —Ç–µ–∫—Å—Ç —à–∞–≥–æ–≤
        document.getElementById('step1').querySelector('.step-text').textContent = '–ó–∞–≥—Ä—É–∑–∫–∞ –≤–∏–¥–µ–æ...';
        document.getElementById('step2').querySelector('.step-text').textContent = '–ê–Ω–∞–ª–∏–∑ –∫–ª—é—á–µ–≤—ã—Ö —Ç–æ—á–µ–∫ (Docker)...';
        document.getElementById('step3').querySelector('.step-text').textContent = '–û—Ü–µ–Ω–∫–∞ –ø–æ—Ö–æ–¥–∫–∏ ML –º–æ–¥–µ–ª—å—é...';
        document.getElementById('step4').querySelector('.step-text').textContent = '–§–æ—Ä–º–∏—Ä–æ–≤–∞–Ω–∏–µ –æ—Ç—á–µ—Ç–∞...';
    }

    // –û–±—Ä–∞–±–æ—Ç–∫–∞ —Ñ–æ—Ä–º—ã
    form.addEventListener('submit', async function(e) {
        e.preventDefault();

        const formData = new FormData(this);
        const animalId = formData.get('animal_id');

        if (!animalId) {
            alert('‚ùå –í—ã–±–µ—Ä–∏—Ç–µ –∂–∏–≤–æ—Ç–Ω–æ–µ');
            return;
        }

        if (!fileInput.files.length) {
            alert('‚ùå –í—ã–±–µ—Ä–∏—Ç–µ –≤–∏–¥–µ–æ—Ñ–∞–π–ª');
            return;
        }

        // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Ä–∞–∑–º–µ—Ä–∞ —Ñ–∞–π–ª–∞
        const file = fileInput.files[0];
        if (file.size > 500 * 1024 * 1024) {
            alert('‚ùå –§–∞–π–ª —Å–ª–∏—à–∫–æ–º –±–æ–ª—å—à–æ–π. –ú–∞–∫—Å–∏–º–∞–ª—å–Ω—ã–π —Ä–∞–∑–º–µ—Ä: 500MB');
            return;
        }

        // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –ø—Ä–æ–≥—Ä–µ—Å—Å
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<span>‚è≥</span><span>ML –∞–Ω–∞–ª–∏–∑ –∑–∞–ø—É—â–µ–Ω...</span>';
        progressSection.style.display = 'block';
        
        updateProgress(1, 25, '–ó–∞–≥—Ä—É–∑–∫–∞ –≤–∏–¥–µ–æ –Ω–∞ —Å–µ—Ä–≤–µ—Ä...');

        try {
            // –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –∑–∞–ø—Ä–æ—Å
            const response = await fetch('/api/upload/real/', {
                method: 'POST',
                body: formData,
                headers: {
                    'X-CSRFToken': document.querySelector('[name=csrfmiddlewaretoken]').value
                }
            });

            const data = await response.json();

            if (data.success) {
                updateProgress(2, 50, '–í–∏–¥–µ–æ –∑–∞–≥—Ä—É–∂–µ–Ω–æ. –ó–∞–ø—É—Å–∫ ML –∞–Ω–∞–ª–∏–∑–∞...');
                
                // –°–∏–º—É–ª–∏—Ä—É–µ–º –¥–∞–ª—å–Ω–µ–π—à–∏–π –ø—Ä–æ–≥—Ä–µ—Å—Å
                setTimeout(() => updateProgress(3, 75, '–ê–Ω–∞–ª–∏–∑ –∫–ª—é—á–µ–≤—ã—Ö —Ç–æ—á–µ–∫...'), 1000);
                setTimeout(() => updateProgress(4, 100, '–§–æ—Ä–º–∏—Ä–æ–≤–∞–Ω–∏–µ –æ—Ç—á–µ—Ç–∞...'), 2000);
                
                setTimeout(() => {
                    alert('‚úÖ –í–∏–¥–µ–æ —É—Å–ø–µ—à–Ω–æ –∑–∞–≥—Ä—É–∂–µ–Ω–æ! –ê–Ω–∞–ª–∏–∑ –Ω–∞—á–∞–ª—Å—è.');
                    window.location.href = '/analysis/results/';
                }, 3000);

            } else {
                throw new Error(data.error || '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏');
            }

        } catch (error) {
            alert('‚ùå –û—à–∏–±–∫–∞: ' + error.message);
            resetForm();
        }
    });

    function resetForm() {
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<span>üöÄ</span><span>–ó–∞–ø—É—Å—Ç–∏—Ç—å ML –∞–Ω–∞–ª–∏–∑</span>';
        progressSection.style.display = 'none';
        resetProgress();
    }

    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
    console.log('Video upload page loaded');
});
</script>
{% endblock %}
