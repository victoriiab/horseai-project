// –û–¢–û–ë–†–ê–ñ–ï–ù–ò–ï –£–í–ï–†–ï–ù–ù–û–°–¢–ò
function updateConfidenceDisplay() {
    if (!analysisData) return;

    let confidence = analysisData.lameness_confidence || 0;
    const lamenessProb = analysisData.lameness_probability || 0;

    if (confidence <= 0) {
        // –†–∞—Å—á–µ—Ç –µ—Å–ª–∏ –Ω–µ—Ç –¥–∞–Ω–Ω—ã—Ö
        if (lamenessProb >= 95 || lamenessProb <= 5) confidence = 85;
        else if (lamenessProb >= 85 || lamenessProb <= 15) confidence = 75;
        else if (lamenessProb >= 70 || lamenessProb <= 30) confidence = 68;
        else if (lamenessProb >= 60 || lamenessProb <= 40) confidence = 62;
        else confidence = 55;
    }

    document.getElementById('analysisConfidence').textContent = `${confidence.toFixed(1)}%`;
    
    let desc = '';
    if (confidence >= 80) desc = '–í—ã—Å–æ–∫–∞—è —Ç–æ—á–Ω–æ—Å—Ç—å';
    else if (confidence >= 70) desc = '–•–æ—Ä–æ—à–∞—è —Ç–æ—á–Ω–æ—Å—Ç—å';
    else if (confidence >= 65) desc = '–î–æ—Å—Ç–∞—Ç–æ—á–Ω–∞—è —Ç–æ—á–Ω–æ—Å—Ç—å';
    else if (confidence >= 60) desc = '–£–¥–æ–≤–ª–µ—Ç–≤–æ—Ä–∏—Ç–µ–ª—å–Ω–∞—è —Ç–æ—á–Ω–æ—Å—Ç—å';
    else desc = '–¢—Ä–µ–±—É–µ—Ç—Å—è –ø—Ä–æ–≤–µ—Ä–∫–∞';
    
    if (analysisData.confidence_from_report) desc += ' (–∏–∑ –æ—Ç—á–µ—Ç–∞)';
    else desc += ' (—Ä–∞—Å—á–µ—Ç–Ω–æ–µ)';
    
    document.getElementById('confidenceDescription').textContent = desc;
}

