// –ü–ê–†–°–ï–† –£–í–ï–†–ï–ù–ù–û–°–¢–ò
function parseConfidenceFromReport(text) {
    const patterns = [
        /–£—Ä–æ–≤–µ–Ω—å —É–≤–µ—Ä–µ–Ω–Ω–æ—Å—Ç–∏ –∞–Ω–∞–ª–∏–∑–∞:\s*(\d+\.?\d*)\s*%/,
        /–£–≤–µ—Ä–µ–Ω–Ω–æ—Å—Ç—å –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è:\s*(\d+\.?\d*)\s*%/,
        /confidence:\s*(\d+\.?\d*)\s*%/i
    ];
    
    for (const pattern of patterns) {
        const match = text.match(pattern);
        if (match && match[1]) {
            return parseFloat(match[1]);
        }
    }
    return null;
}

