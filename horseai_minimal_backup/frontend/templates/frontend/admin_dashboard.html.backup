    </main>

    <script>
        // –ê–∫—Ç–∏–≤–Ω–æ–µ —Å–æ—Å—Ç–æ—è–Ω–∏–µ –Ω–∞–≤–∏–≥–∞—Ü–∏–∏
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');
            
            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                } else {
                    link.classList.remove('active');
                }
            });
            
            // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –¥–∞—Ç—É —Å–µ—Ä–≤–µ—Ä–∞
            document.getElementById('server-date').textContent = new Date().toLocaleDateString('ru-RU');
            
            // –ó–∞–≥—Ä—É–∂–∞–µ–º —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É –µ—Å–ª–∏ –Ω–µ—Ç –¥–∞–Ω–Ω—ã—Ö
            fetch('/api/system-stats/')
                .then(response => response.json())
                .then(data => {
                    console.log('–°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ dashboard:', data);
                    console.log('–ñ–∏–≤–æ—Ç–Ω—ã—Ö:', data.total_animals);
                    console.log('–í–∏–¥–µ–æ:', data.total_videos);
                    // –û–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–µ
                    const statsElements = document.querySelectorAll('.text-lg.font-bold');
                    if (statsElements.length >= 5) {
                        statsElements[0].textContent = data.users || '6';
                        statsElements[1].textContent = data.animals || '9';
                        statsElements[2].textContent = data.videos || '21';
                        statsElements[3].textContent = data.analyses || '11';
                        statsElements[4].textContent = data.rations || '5';
                    }
                })
                .catch(error => console.log('–ù–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É:', error));
        });
    </script>
