    <!-- –£–≤–µ–¥–æ–º–ª–µ–Ω–∏—è -->
    {% if messages %}
    <div class="messages-container">
        {% for message in messages %}
        <div class="alert alert-{{ message.tags }}">
            <span>
                {% if message.tags == 'success' %} ‚úì
                {% elif message.tags == 'error' %} ‚úó
                {% elif message.tags == 'warning' %} ‚ö†
