            # –ü—Ä–æ—Å—Ç–æ–π —Ä–∞—Å—á–µ—Ç: DMI = 2.5% –æ—Ç –≤–µ—Å–∞
            total_dmi = float(weight) * 0.025
            energy_content = total_dmi * 1.25
            
            # –°–æ—Å—Ç–∞–≤ —Ä–∞—Ü–∏–æ–Ω–∞
            composition = {
                'hay': round(total_dmi * 0.55, 1),
                'oats': round(total_dmi * 0.18, 1),
                'bran': round(total_dmi * 0.07, 1),
                'carrot': round(total_dmi * 0.14, 1),
                'premix': round(float(weight) * 0.2, 0)
            }
            
            # –°–æ–∑–¥–∞–µ–º —Ä–∞—Ü–∏–æ–Ω
            ration = Ration.objects.create(
                animal=animal,
                total_dmi=total_dmi,
                energy_content=energy_content,
                composition=json.dumps(composition),
                calculation_date=timezone.now()
            )
            
            return JsonResponse({
                'success': True,
                'ration_id': ration.ration_id,
                'total_dmi': round(total_dmi, 1),
                'energy_content': round(energy_content, 1),
                'feed_breakdown': composition,
                'recommendations': [
                    '–†–∞–∑–¥–µ–ª–∏—Ç–µ —Å—É—Ç–æ—á–Ω—É—é –Ω–æ—Ä–º—É –Ω–∞ 3-4 –∫–æ—Ä–º–ª–µ–Ω–∏—è',
                    '–°–µ–Ω–æ –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å –¥–æ—Å—Ç—É–ø–Ω–æ –ø–æ—Å—Ç–æ—è–Ω–Ω–æ',
                    '–ö–æ–Ω—Ü–µ–Ω—Ç—Ä–∞—Ç—ã –¥–∞–≤–∞–π—Ç–µ –ø–æ—Å–ª–µ —Å–µ–Ω–∞'
                ]
            })
            
        except Exception as e:
            return JsonResponse({'success': False, 'error': str(e)}, status=500)
    
    return JsonResponse({'success': False, 'error': 'POST required'}, status=400)

