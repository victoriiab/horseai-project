@login_required
def api_get_rations(request):
    """–ü–æ–ª—É—á–∏—Ç—å —Ä–∞—Ü–∏–æ–Ω—ã –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è"""
    try:
        custom_user = User.objects.get(login=request.user.username)
        user_animals = Animal.objects.filter(user=custom_user)
        rations = Ration.objects.filter(animal__in=user_animals).order_by('-calculation_date')[:10]
        
        rations_list = []
        for ration in rations:
            # –ü–∞—Ä—Å–∏–º composition –µ—Å–ª–∏ –µ—Å—Ç—å
            composition = {}
            if ration.composition:
                try:
                    composition = json.loads(ration.composition)
                except:
                    composition = {}
            
            rations_list.append({
                'ration_id': ration.ration_id,
                'animal_name': ration.animal.name if ration.animal else '–ë–µ–∑ –∏–º–µ–Ω–∏',
                'total_dmi': ration.total_dmi,
                'energy_content': ration.energy_content,
                'calculation_date': ration.calculation_date.strftime('%d.%m.%Y') if ration.calculation_date else '',
                'composition': composition
            })
        
        return JsonResponse({
            'success': True,
            'rations': rations_list,
            'count': len(rations_list)
        })
        
    except Exception as e:
        return JsonResponse({'success': False, 'error': str(e)}, status=500)














